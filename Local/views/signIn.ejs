<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>BSafes - Your Safe in the Cloud</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%
      var fontawesomeV5 = true;
    %>
    <% include stylesheets %>
    <% include commonHeader %>
  </head>
  <body>
		<% include navBarWithoutSignIn %>
		<div>
      <div class="col-xs-10">
        <ul class="breadcrumb">
          <li><a id="" href="#">Email Sign Up</a></li>
        </ul>
      </div>
    </div>
		<div class="container">
     <div class="row">
        <div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 textAlignCenter">
            <h1>Sign In</h1>
        </div>
      </div>
      <br>
      <div class="row emailSignInForm">
        <div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
          <form class="form-horizontal backgroundColorWhite">
            <fieldset>
              <br>
              <div class="row form-group">
                <div class="col-xs-10 col-xs-offset-1 col-sm-offset-3 col-sm-6">
                  <label for="email" class="control-label">Email</label>
                  <input type="text" class="form-control" id="email" placeholder="">
                </div>
              </div>
              <div class="row form-group">
                <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
                  <a href="" class="btn btn-primary btn-sm pull-right textTransformCapitalize" id="nextBtn">Next</a>
                </div>
              </div>
							<div class="row form-group">
                  <div class="col-xs-10 col-xs-offset-1 col-sm-offset-3 col-sm-6">
                    <p class="hidden warningMessage" id="invalidMember">Invalid member !</p>
                  </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
			<div class="row passwordForm hidden">
        <div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
          <form class="form-horizontal backgroundColorWhite">
            <fieldset>
              <br>
              <div class="row form-group">
                <div class="col-xs-10 col-xs-offset-1 col-sm-offset-3 col-sm-6">
                  <label for="password" class="control-label">Password</label>
                  <input type="password" class="form-control" id="password" placeholder="">
                </div>
              </div>
              <div class="row form-group">
                <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
                  <a href="" class="btn btn-primary btn-sm pull-righti textTransformCapitalize" id="sendBtn">Send</a>
                </div>
              </div>
							<div class="row form-group">
                  <div class="col-xs-10 col-xs-offset-1 col-sm-offset-3 col-sm-6">
                    <p class="hidden warningMessage" id="wrongPassword">Wrong password !</p>
                  </div>
              </div>
 							<div class="row form-group">
                <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
                  <a href="/forgotEmailPassword" class="textTransformCapitalize">Forgot password</a>
                </div>
              </div>
           </fieldset>
          </form>
        </div>
      </div>
			<div class="oauthSignIn">
      	<div class="row">
        	<div class="col-xs-10 col-xs-offset-1 text-center">
          	<h4>Sign in with</h4>
        	</div>
      	</div>
      	<div class="row">
        	<div class="col-xs-6 col-sm-offset-3 col-sm-3">
        		<div class="btn-group pull-right">
          		<a href="/signIn/facebook" class="btn btn-primary btn-sm facebookBtn"><i class="fab fa-facebook-f "></i></a>
          		<div class="btn-group">
            		<a href="/signIn/facebook" class="btn btn-primary btn-sm facebookBtn textTransformCapitalize">Facebook</a>
          		</div>
        		</div>
        	</div>	
      
      		<div class="col-xs-6 col-sm-3">
        		<div class="btn-group">
          		<a href="/signIn/google" class="btn btn-primary btn-sm googleBtn"><i class="fab fa-google-plus-g "></i></a>
          		<div class="btn-group">
            		<a href="/signIn/google" class="btn btn-primary btn-sm googleBtn textTransformCapitalize">Google</a>
          		</div>
        		</div>
      		</div>
      	</div>
				<div class="row newSignUp">
        	<div class="row form-group text-center">
          	<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            	<h5>New ?  <span><a href="/emailSignUp">Sign Up</a></span></h5>
          	</div>
        	</div>
      	</div>
			</div>	
		</div>
		<%
       var signInJS = true;
       var signedOutState = true;
    %>
		<% include scripts %>
  </body>
</html>

